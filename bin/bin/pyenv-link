#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

if [ $# -lt 2 ]
then
    echo "pyenv-link: takes <local virt> <pyenv name>"
    exit 1
fi

thisdir="$PWD"
target=$(realpath "$1")
name="$2"

cd ~/.pyenv/versions/
ln -s "$target" "$name"

read -p "add .python-version file? [y/N] " ans

if [ "$ans" == 'y' ] || [ "$ans" == 'Y' ]; then
    cd "$thisdir"
    pyenv local "$name"
fi
