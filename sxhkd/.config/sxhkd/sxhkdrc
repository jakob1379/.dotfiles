################################################################################
#                                 SXHKD CONFIG                                 #
#									       #
# This file has all the non wm specific keybinding for ease of migration and   #
# maintanance. 	       	      	       		      	      		       #
################################################################################

################################################################################
#                              Program Navigation                              #
################################################################################

# start program launcher
super + d
        rofi -modi run,drun,window -show run
	#dmenu_recency

super + shift + d
        rofi -modi run,drun,window -show drun

# launch categorized menu
super + z
	morc_menu

################################################################################
#                                   Polybar                                    #
################################################################################

# restart polybar
super + shift + r
	~/.config/polybar/refresh_polybar

# lock screen
super + ctrl + l
	betterlockscreen -l dimblur

# hide polybar
super + m
	sh ~/.config/polybar/Scripts/autohide.sh

################################################################################
#                                Other Programs                                #
################################################################################

# xkill
super + ctrl + @x
	xkill

super + ctrl + b
	terminal -e 'bmenu'

super + ctrl + m
	pavucontrol

super + ctrl + t
	compton -b

################################################################################
#                                    F-keys                                    #
################################################################################

super + F1
	emacs

super + F2
	firefox

super + F3
	nemo

super + F4
	spotify

super + F5
	terminal -e 'mocp'

################################################################################
#                                    Other                                     #
################################################################################

super + Return
	termite

super + shift + F1
	gksu emacs

super + shift + F3
	gksu nemo

super + shift + @d
	"killall dunst;
	notify-send -t 2000 k'restart dunst'"

super + t
	pkill compton

################################################################################
#                                   Hardware                                   #
################################################################################

# microphone
XF86AudioMicMute
	~/.i3/Scripts/toggle-microphone # mute sound

# auto screenrotation
alt + ctrl + r
	~/.i3/Scripts/toggle-screenrotation &

# turn screen off
ctrl + alt + d
     sleep 0.5 && ~/.i3/Scripts/screen-off

# bluetooth
ctrl + alt + b
	~/.i3/Scripts/toggle-bluetooth

# WiFi
ctrl + alt + w
	sh ~/.i3/Scripts/toggle-wlan


################################################################################
#                                  Screenshot                                  #
################################################################################

Print
	i3-scrot #fullscreen
super + @Print
	i3-scrot -w # window
super + shift + @Print
	flameshot gui # area
ctrl + alt + shift + m
       	~/.i3/Scripts/mathpix

################################################################################
#                                media controls                                #
################################################################################

alt + shift + 2
	playerctl play-pause
alt + shift + 3
	playerctl next

XF86BrightnessUp
	xbacklight -inc 10

XF86BrightnessDown
	xbacklight -inc 10