#!/bin/sh
# /usr/bin/i3exit

lock() {
    playerctl -s pause
    betterlockscreen -l dimblur --text "I take pictures :3"
}

bettersuspend() {
    playerctl pause
    amixer set Master mute
    betterlockscreen -s -l dimblur --text "I take pictures :3"
}
# with openrc use loginctl
[[ $(cat /proc/1/comm) = "systemd" ]] && logind=systemctl || logind=loginctl

case "$1" in
    lock)
    lock
    ;;
    logout)
    ~/.i3/Scripts/i3-res save
    sleep 2
    i3-msg exit
    ;;
    switch_user)
    dm-tool switch-to-greeter
    ;;
    suspend)
    bettersuspend
    ;;
    hibernate)
    ~/.i3/Scripts/i3-res save
    sleep 2
    systemctl hibernate -i && lock
    ;;
    reboot)
    ~/.i3/Scripts/i3-res save
    sleep 2
    $logind reboot
    ;;
    shutdown)
    ~/.i3/Scripts/i3-res save
    sleep 2
    $logind poweroff
    ;;
    *)
    echo "== ! i3exit: missing or invalid argument ! =="
    echo "Try again with: lock | logout | switch_user | suspend | hibernate | reboot | shutdown"
    exit 2
esac

exit 0
