#!/usr/bin/env sh

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit logout? This will end your X session.' -b 'Yes, logout' 'i3-msg exit'"

# Set shut down, restart and locking features
set $mode_system (l)ock, (e)xit, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.i3/i3exit lock, mode "default"
    bindsym s exec --no-startup-id ~/.i3/i3exit suspend, mode "default"
    bindsym e exec --no-startup-id ~/.i3/i3exit logout, mode "default"
    bindsym h exec --no-startup-id ~/.i3/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.i3/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+0 mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ae resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Screen brightness Controls
bindsym XF86MonBrightnessUp exec light -A 5; exec sh ~/.i3/print_brightness.sh # increase screen brightness 
bindsym XF86MonBrightnessDown exec light -U 5; exec sh ~/.i3/print_brightness.sh # decrease screen brightness

# Audio controls
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ #increase sound volume
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle # mute sound

# Flameshot gui
bindsym Print exec  --no-startup-id flameshot gui

# Media controls
bindsym mod1+shift+2 exec --no-startup-id playerctl play-pause
bindsym mod1+shift+3 exec --no-startup-id playerctl next

# Autohide polybar
bindsym $mod+m exec --no-startup-id sh ~/.dotfiles/polybar/.config/polybar/autohide.sh

# Toggle bluetooth
bindsym Control+Mod1+b exec ~/Dropbox/Scripts/Linux/toggleBluetooth

# Toggle WiFi
bindsym Control+Mod1+w exec ~/Dropbox/Scripts/Linux/toggleWIFI

