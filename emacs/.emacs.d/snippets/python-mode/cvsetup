# -*- mode: snippet -*-
# name: cvsetup
# key: cvsetup
# --

cap = cv2.VideoCapture(0)

while True:
    ret, frame = cap.read()
    cv2.imshow('frame', frame)

    if (cv2.waitKey(1) & 0xFF == ord('q')) or (not ret):
        break

# After the loop release the cap object
cap.release()

# Destroy all the windows
cv2.destroyAllWindows()
